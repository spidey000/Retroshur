<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

        <view name="system, basic, detailed, video">
                <image name="logo">
                        <path>./_inc/system.png</path>
                </image>
        </view>

        <view name="basic,detailed, video">
                <image name="backgroundmag" extra="true">
                   <origin>0 0</origin>
                   <pos>0 0</pos>
                   <size>1 1</size>
                   <path>./_inc/magcover.png</path>
                </image>

        </view>

        <view name="video">
                <video name="md_video">
                   <origin>0.5 0.5</origin>
                   <pos>0.7275 0.421</pos>
                   <maxSize>0.265 0.265</maxSize>
                   <delay>0.01</delay>
                   <default>./_inc/videos/static.mp4</default>
                   <showSnapshotNoVideo>true</showSnapshotNoVideo>
                   <showSnapshotDelay>false</showSnapshotDelay>
                </video>
                <image name="md_image">
                   <origin>0 0</origin>
                   <pos>0.22 0.7</pos>
                   <maxSize>0.135 0.205</maxSize>
                </image>
        </view>
</theme>
